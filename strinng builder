import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	    
	    StringBuilder sb = new StringBuilder("Aman");
	    System.out.println(sb);
	    
	    System.out.println(sb.charAt(0)); //chat at Index
	    
	    sb.setCharAt(0, 'A');
	    System.out.println(sb); //replae char
	    
	    sb.insert(0, "fhone");
	    System.out.println(sb); //insert the string 
	    
	    
	    sb.delete(0, 5);//delete the char or string by using indexing strt and last index 
	    System.out.println(sb);
	    
	}
}
